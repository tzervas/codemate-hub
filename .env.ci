# CI/CD Environment Configuration
# This file is SAFE FOR COMMIT - contains only non-sensitive test values
# Sensitive values should be set via GitHub Secrets and referenced in workflows

# Code-Server Password - Using insecure test value for CI only
# In production, use: PASSWORD=${{ secrets.CODESERVER_PASSWORD }}
PASSWORD=ci-test-password-insecure

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_NUM_PARALLEL=2
OLLAMA_NUM_THREAD=2

# Chroma Database
CHROMA_DB_DIR=/app/chroma_db

# Optional: API Keys (set via GitHub Secrets in production)
# OPENAI_API_KEY will be injected from ${{ secrets.OPENAI_API_KEY }}
# ANTHROPIC_API_KEY will be injected from ${{ secrets.ANTHROPIC_API_KEY }}
