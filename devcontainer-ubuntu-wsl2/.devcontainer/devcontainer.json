{
  "name": "Codemate Ubuntu Devcontainer (Python 3.12)",
  "build": {
    "context": "..",
    "dockerfile": ".devcontainer/Dockerfile"
  },
  "features": {
    "docker-in-docker": "latest"
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens",
        "esbenp.prettier-vscode"
      ],
        "settings": {
          "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "python.formatting.provider": "black",
        "python.analysis.typeCheckingMode": "basic",
        "terminal.integrated.defaultProfile.linux": "bash",
        "github.copilot": {
          "enable": true,
          "experimental": {
            "enableRaptorMini": true
          }
        }
      }
    }
  },
  "forwardPorts": [11434, 7860, 8080, 8000],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "postCreateCommand": "bash scripts/postCreateCommand.sh",
  "postAttachCommand": "bash scripts/uv-python-manage.sh 3.12.11",
  "remoteUser": "vscode"
}